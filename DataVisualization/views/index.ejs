<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title>Test</title>

    <% include drawer.ejs %>
    <% include indexHeader.html %>

</head>

<body>

<form id="formPost" action="/draw" method="post">

    <div class="sidebar" style="float:left; margin-left:20px; margin-top:20px; width:20%">
        <ul class="nav navbar-fixed-side">

            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#col_getJSON">DATA SET
            </button>


            <div id="col_getJSON" class="collapse">

                <div class="input-group">
                    <input id="inputUrl" name="inputUrl" type="text" class="form-control"
                           value="http://support.jennifersoft.com:8000/api/realtime/domain"
                           onClick="this.setSelectionRange(0, this.value.length)">
    				  <span class="input-group-btn">
       					 <button href="#modalHeader" class="btn btn-default" type="button" data-toggle="modal">
                             <span class="glyphicon glyphicon-cog"/>
                         </button>
     				 </span>
                </div>

                <button id="btnREST" class="btn btn-default" data-toggle="drawer" href="#drawerStruct" type="button">Register</button>
            </div>

            <div class="form-group" style="margin-top: 30px">

                <label style="margin-top: 5px">JSONPath</label>

                <div id="btnJSON" class="btn btn-default pull-right" >
                    <span class="glyphicon glyphicon-plus"/>
                </div>

                <div id="groupJSON" style="margin-top: 6px">
                    <input type="text" name="inputJSONPath" class="form-control" value="$..path">
                </div>

            </div>


            <li><a href="#">Line</a></li>

            <li><a href="#">Bar</a></li>

            <li>
                <a id="aChart" data-toggle="modal" href="#modalChart">Chart</a>
            <li>
                <a id="aRealtime" data-toggle="collapse" data-target="#formRealtime">Realtime</a>

                <div id="formRealtime" class="collapse">

                    <div class="col-xs-5">
                        <input class="form-control" placeholder="Column">
                    </div>

                    <div class="col-xs-7">
                        <input class="form-control" placeholder="JSONPath">
                    </div>

                </div>

                <div id="listRealtime" class="collapse">
                    <ul class="list-group">
                        <li class="list-group-item">One</li>
                        <li class="list-group-item">Two</li>
                        <li class="list-group-item">Three</li>
                    </ul>
                </div>
            </li>

            <input id="inputPost" type="button" class="btn btn-info" value="Draw" style="margin-top: 30px">

        </ul>

    </div>
</form>


<!--chart-->


<div id="divChart"></div>

<!--<div id="jsonChart" style="float:left; width:70%; margin-left:30px">-->
<!--</div>-->


<!--setting Header modal-->

<div class="modal fade" id="modalHeader">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 class="modal-title">Setting MetaData</h3>
            </div>
            <div class="modal-body">

                <div align="center">Data Title</div>

                <input id="inputTitle" type="text" placeholder='String' class="form-control"
                       onClick="this.setSelectionRange(0, this.value.length)"/>

                <table class="table table-striped" id="tblGrid">
                    <thead id="tblHead">
                    <tr>
                        <th>Interval</th>
                        <th>Exist TimeColumn</th>
                    </tr>
                    </thead>
                    <tbody>

                    <td>
                        <input id="inputInterval" type="text" placeholder='Number' class="form-control"
                               onClick="this.setSelectionRange(0, this.value.length)"/>
                    </td>
                    <td>
                        <div align="center">
                        <input id="inputTimeCheck" type="checkbox" style="width:30px; height:30px;"/>
                        </div>
                    </td>
                    </tbody>

                    <thead id="tblHead">
                    <tr>
                        <th>key</th>
                        <th>value</th>
                    </tr>
                    </thead>
                    <tbody id="tbodyTable">

                    </tbody>
                    <td>
                        <input id="inputKey" type="text" placeholder='Key' class="form-control"
                               onClick="this.setSelectionRange(0, this.value.length)"/>
                    </td>
                    <td>
                        <input id="inputValue" type="text" placeholder='Value' class="form-control"
                               onClick="this.setSelectionRange(0, this.value.length)"/>
                    </td>
                </table>

                <div class="form-group">

                    <input id="btnMinus" type="button" class="btn btn-danger pull-right" value="-"
                           style="margin-left: 3px;">

                    <input id="btnAdd" type="button" class="btn btn-warning pull-right" value="+">

                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
                <button id="btnSave" type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
            </div>

        </div>
    </div>
</div>


<!--setting Chart model-->

<div class="modal fade" id="modalChart">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 class="modal-title">Setting Chart</h3>
            </div>

            <div class="modal-body">

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
            </div>

        </div>
    </div>
</div>


</body>

<script src="javascripts/index.js" type="text/javascript"></script>

</html>















